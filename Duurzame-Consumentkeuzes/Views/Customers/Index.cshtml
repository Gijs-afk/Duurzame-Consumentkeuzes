@model IEnumerable<Duurzame_Consumentkeuzes.Models.Customer>
@{
    ViewData["Title"] = "Registered Customers";
}

<h1>Lijst van klanten</h1>
<table class="table">
    <tr><th>Naam</th><th>Email</th><th>Budget</th></tr>
    @foreach (Customer c in Model)
    {
        <tr>
            <td>@c.UserName</td>
            <td>@c.Email</td>
            <td>@(c.Budget.ToString() ?? "")</td>
            <td>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@c.Id">
                    Profiel
                </a>
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@c.Id">
                    Wijzigen
                </a>
            </td>
            <td>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@c.Id">
                    Verwijderen
                </a>
            </td>
        </tr>
    }
</table>