@model Duurzame_Consumentkeuzes.Models.Customer

@{
    ViewData["Title"] = "Delete";
}

<h1>Verwijderen</h1>
<a asp-action="Index">Terug naar gebruikersoverzicht</a>

<h3 style="margin-top:50px;">Weet u zeker dat u deze klant wilt verwijderen?</h3>
@Html.ValidationSummary(true, "", new { @class = "text-danger"})
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Budget
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" />       
    </form>
</div>